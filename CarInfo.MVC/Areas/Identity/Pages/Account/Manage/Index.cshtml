@page
@model IndexModel
@{
    ViewData["Title"] = "Profil konta";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<div class="justify-content-center img-100 mb-3">
    <img src="/img/profile_icon.png" />
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Proszę wybrać swoją nazwę użytkownika." disabled />
                <label asp-for="Username" class="form-label">Użytkownik</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Wprowadź swój numer telefonu." />
                <label asp-for="Input.PhoneNumber" class="form-label">Numer telefonu</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Zapisz zmiany</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
