@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Nie pamiętasz hasła?";
}
<div class="" justify-content-center">
    <h1>@ViewData["Title"]</h1>
	<div class="justify-content-center img-50 mb-3">
        <img src="/img/icon/forgotPassword_icon.png" alt="" />
    </div>
    <h3>Wpisz swój adres e-mail.</h3>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Zresetuj hasło</button>
            </form>
        </div>
    </div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
