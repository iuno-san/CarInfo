@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Zmień swoje hasło";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<div class="justify-content-center img-100 mb-3">
    <img src="/img/icon/password_icon.png" />
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="Obecne hasło" aria-required="true" placeholder="Wprowadź swoje stare hasło." />
                <label asp-for="Input.OldPassword" class="form-label">Obecne hasło</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger">Pole Obecne hasło jest wymagane.</span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="Nowe hasło" aria-required="true" placeholder="Wprowadź nowe hasło." />
                <label asp-for="Input.NewPassword" class="form-label">Nowe hasło</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger">Pole Nowe hasło jest wymagane.</span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="Nowe hasło" aria-required="true" placeholder="Potwierdź swoje nowe hasło." />
                <label asp-for="Input.ConfirmPassword" class="form-label">Potwierdź nowe hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger">Hasła nie pasują do siebie.</span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Zmień hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
